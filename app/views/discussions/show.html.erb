<div class="row">
<div class="span6 offset3">
<div class="well">
<p>
  <b>Topic:</b>
  <%= @discussion.title %>
</p>

<p>
  <b>Language:</b>
  <%= @discussion.language %>
</p>

<p>
  
  <%= @discussion.content %>
</p>

<h2>Comments</h2>
<% @discussion.comments.each do |comment| %>
	<p>
		<b><%= comment.commenter %>:</b>
		<%= comment.body %>
	</p>
<% end %>
</br>
</br>

<h2>Add a comment:</h2>
<%= form_for ([@discussion, @discussion.comments.build]) do |f| %>
	<div class="field">
		<%= f.label :commenter %>
		<%= f.text_field :commenter %>
	</div>
	<div class="field">
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</div>
	<div class="form-actions">
		<%= f.submit %>
	</div>
<% end %>
<%= link_to 'Edit', edit_discussion_path(@discussion) %> |
<%= link_to 'Back', discussions_path %>
</div>
</div>
</div>
