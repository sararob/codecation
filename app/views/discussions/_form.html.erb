<%= simple_form_for(@discussion, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :title %>
    <%= f.input :language %>
    <%= f.input :content, as: :text, input_html: {rows: "3"} %>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
